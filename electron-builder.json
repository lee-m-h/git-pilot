{
  "appId": "com.fnf.git-pilot",
  "productName": "Git Pilot",
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "electron/**/*"
  ],
  "extraResources": [
    {
      "from": ".next/standalone",
      "to": "app",
      "filter": ["**/*"]
    },
    {
      "from": ".next/static",
      "to": "app/.next/static"
    },
    {
      "from": "public",
      "to": "app/public"
    }
  ],
  "mac": {
    "category": "public.app-category.developer-tools",
    "icon": "build/icon.svg",
    "target": [
      {
        "target": "dmg",
        "arch": ["arm64", "x64"]
      }
    ],
    "darkModeSupport": true,
    "hardenedRuntime": false,
    "gatekeeperAssess": false
  },
  "dmg": {
    "title": "Git Pilot",
    "background": null,
    "iconSize": 100,
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "win": {
    "icon": "build/icon.svg",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "linux": {
    "icon": "build/icon.svg",
    "target": ["AppImage", "deb"],
    "category": "Development"
  }
}
